    "bulk-require": "^1.0.1",
    "config": "^3.2.2",
    "cors": "^2.8.5",
    "dateformat": "^3.0.3",
    "express": "^4.17.1",
    "faker": "^4.1.0",
    "firebase": "^7.0.0",
    "firebase-admin": "^8.6.0",
    "joi": "^14.3.1",
    "knex": "^0.19.5",
    "lodash": "^4.17.15",
    "log4js": "^5.1.0",
    "luxon": "^1.19.3",
    "mime-types": "2.1.24",
    "multer": "^1.4.2",
    "multer-s3": "^2.9.0",
    "node-susanin": "^1.5.3",
    "pg": "^7.12.1",
    "pg-hstore": "^2.3.3",
    "ramda": "^0.26.1",
    "sequelize": "^5.19.2",
    "sequelize-cli": "^5.5.1",
    "sharp": "^0.23.1",
    "string-hash": "^1.1.3"
