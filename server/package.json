{
  "name": "sweet-pay-api",
  "version": "1.0.0",
  "description": "API for sweet-pay apps",
  "main": "./bin/www.js",
  "scripts": {
    "===> USEFULL SCRIPTS <===": "---------------------------------------------------",
    "docs": "make docs-start &",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "===> DEVELOPMENT MODE <===": "--------------------------------------------------",
    "start:dev": "cross-env NODE_ENV=development nodemon ./bin/www.js",
    "start:dev:live": "npm run docs && npm run start:dev",
    "===> TEST MODE <===": "---------------------------------------------------------",
    "start:test": "cross-env NODE_ENV=test nodemon ./bin/www.js",
    "start:test:live": "npm run docs && npm run start:test",
    "===> PRODUCTION MODE <===": "---------------------------------------------------",
    "start:prod": "cross-env NODE_ENV=production nodemon ./bin/www.js",
    "start:prod:live": "npm run docs && npm run start:prod",
    "===> LOCAL MODE <===": "--------------------------------------------------------",
    "start:local": "cross-env NODE_ENV=my-local nodemon ./bin/www.js",
    "start:local:live": "npm run docs && npm run start:dev",
    "====================": "--------------------------------------------------------",
    "test": "NODE_ENV=test mocha --exit test/**/*.test.js --timeout 20000"
  },
  "license": "ISC",
  "dependencies": {
    "@sentry/node": "^5.6.2",
    "aws-sdk": "^2.539.0",
